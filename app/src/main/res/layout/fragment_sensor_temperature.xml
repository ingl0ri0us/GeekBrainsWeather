<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SensorTemperature">


    <TextView
        android:id="@+id/temperature_sensor_label"
        android:layout_width="128dp"
        android:layout_height="30dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="@string/temperature_from_sensor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/temperature_sensor_value"
        android:layout_width="128dp"
        android:layout_height="30dp"
        android:layout_marginTop="32dp"
        android:text=""
        app:layout_constraintStart_toEndOf="@+id/temperature_sensor_label"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/humidity_sensor_label"
        android:layout_width="128dp"
        android:layout_height="30dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:text="@string/humidity_from_sensor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/temperature_sensor_label" />

    <TextView
        android:id="@+id/humidity_sensor_value"
        android:layout_width="128dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:text=""
        app:layout_constraintStart_toEndOf="@+id/humidity_sensor_label"
        app:layout_constraintTop_toBottomOf="@+id/temperature_sensor_value" />

</androidx.constraintlayout.widget.ConstraintLayout>