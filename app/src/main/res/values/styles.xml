<resources xmlns:tools="http://schemas.android.com/tools">
    
    <attr format="reference" name="cardStyle"/>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorSecondary</item>
        <item name="android:background">@color/colorPrimaryLight</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TealAndOrangeTheme">
        <item name="android:background">@color/colorPrimaryLight</item>
        <item name="android:colorPrimary" tools:ignore="NewApi">@color/colorPrimary</item>
        <item name="android:button">@color/colorSecondary</item>
        <item name="android:colorAccent" tools:ignore="NewApi">@color/colorSecondary</item>
        <item name="android:fontFamily" >@font/bio_rhyme</item>

    </style>

    <style name="ToolBarTheme">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:colorBackground">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="PrimaryFont">
        <item name="android:fontFamily">@font/bio_rhyme</item>
    </style>

    <style name="SecondaryFont">
        <item name="android:fontFamily">@font/space_mono</item>
    </style>

    <style name="CardViewStyle" parent="CardView">
        <item name="cardBackgroundColor">@color/colorPrimary</item>
    </style>

</resources>
